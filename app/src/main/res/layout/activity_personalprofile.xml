<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.PersonalProfile"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_leftarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/leftarrow"
        android:layout_margin="30dp"
        android:contentDescription="@string/complete" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/personal_information"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/userface"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_face"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/add"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_below="@id/userface"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profilegender"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/gender"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textSize="15sp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/next"
            android:contentDescription="@string/img" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_age"
        android:layout_below="@id/ll_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profilebirthday"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/age"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textSize="15sp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:layout_width="15sp"
            android:layout_height="match_parent"
            android:src="@drawable/next"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/img" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_below="@id/ll_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:onClick="height">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profileheight"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/hight"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_height"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textSize="15sp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:layout_width="15sp"
            android:layout_height="match_parent"
            android:src="@drawable/next"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/img" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_fat"
        android:layout_below="@id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:onClick="fat">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profilefat"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/fat"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_fat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textSize="15sp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:layout_width="15sp"
            android:layout_height="match_parent"
            android:src="@drawable/next"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/img" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_fat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:onClick="exercise">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profilebarbell"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Activity"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_exercise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textSize="15sp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:layout_width="15sp"
            android:layout_height="match_parent"
            android:src="@drawable/next"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/img" />
    </LinearLayout>

</RelativeLayout>